---
import { template } from '../../settings'

const { lightTheme, darkTheme } = template
---

<label class="grid place-items-center" aria-label="Toggle color theme" for="themeToggle">
	<input id="themeToggle" type="checkbox" class="toggle theme-controller col-span-2 col-start-1 row-start-1" aria-label="Toggle color theme" />

	<svg
		class="pointer-events-none stroke-base-100 fill-base-100 col-start-1 row-start-1"
		xmlns="http://www.w3.org/2000/svg"
		width="14"
		height="14"
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round">
		<circle cx="12" cy="12" r="5" />
		<path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
	</svg>

	<svg
		class="pointer-events-none stroke-base-100 fill-base-100 col-start-2 row-start-1"
		xmlns="http://www.w3.org/2000/svg"
		width="14"
		height="14"
		viewBox="0 0 24 24"
		fill="none"
		stroke="currentColor"
		stroke-width="2"
		stroke-linecap="round"
		stroke-linejoin="round">
		<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
	</svg>
</label>

<script is:inline define:vars={{ lightTheme, darkTheme }}>
	;(() => {
		const storageKey = 'theme'
		const toggleId = 'themeToggle'
		const root = document.documentElement
		const validThemes = new Set([lightTheme, darkTheme])

		const safeGet = () => {
			try {
				return localStorage.getItem(storageKey)
			} catch {
				return null
			}
		}

		const safeSet = (value) => {
			try {
				localStorage.setItem(storageKey, value)
			} catch {
				/* ignore persistence issues */
			}
		}

		const pickInitialTheme = () => {
			const stored = safeGet()
			if (stored && validThemes.has(stored)) return stored
			const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
			return prefersDark ? darkTheme : lightTheme
		}

		const applyTheme = (theme, persist = true) => {
			const nextTheme = validThemes.has(theme) ? theme : lightTheme
			root.setAttribute('data-theme', nextTheme)
			if (persist) safeSet(nextTheme)
			const toggle = document.getElementById(toggleId)
			if (toggle) toggle.checked = nextTheme === darkTheme
		}

		const syncThemeState = () => {
			const stored = safeGet()
			if (stored && validThemes.has(stored)) {
				applyTheme(stored, false)
			} else {
				applyTheme(pickInitialTheme(), true)
			}
		}

		const onToggleChange = (event) => {
			const target = event.target
			if (!(target instanceof HTMLInputElement)) return
			if (target.id !== toggleId) return
			const selected = target.checked ? darkTheme : lightTheme
			applyTheme(selected, true)
		}

		if (root.dataset.themeControllerInitialized !== 'true') {
			document.addEventListener('change', onToggleChange)
			document.addEventListener('astro:after-swap', syncThemeState)
			root.dataset.themeControllerInitialized = 'true'
		}

		syncThemeState()
	})()
</script>
