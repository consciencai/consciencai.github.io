---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, blogName, title, institute, profilePicture, profilePicture2} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome to <span class='text-secondary'>{blogName}</span>!  </h1>
  <!-- <h2 class='text-2xl font-bold mb-2'>
    I'm <span class='text-secondary'>{fullName}</span>
  </h2>-->
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    Driven by a long-standing passion for computers and philosophy, I explore the philosophy of AI.<br />
    More specifically, my work focuses on Artificial Consciousness and AI Ethics.
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='size-72 lg:block hidden'>
  <!-- Add your profile image -->
  <Image
    src={profilePicture2}
    alt={fullName}
    class='w-full h-full mask mask-circle size-44'
  />
</div>
