---
import { Image } from 'astro:assets'

import SocialIcons from './SocialIcons.astro'


const {fullName, blogName, title, institute, profilePicture, profilePicture2, pixelProfilePic} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    Welcome to <span class='text-secondary'>{blogName}</span>!  </h1>
  <!-- <h2 class='text-2xl font-bold mb-2'>
    I'm <span class='text-secondary'>{fullName}</span>
  </h2>-->

  <p class='text-xl text-gray-600 mb-4'>A blog about computers, AI, consciousness, and the infosphere.</p>
  <p class='text-lg mb-6'>
     
  </p>
</div>
<div class='size-32 lg:block hidden'>
  <!-- Add your profile image -->
  <Image
    src={pixelProfilePic}
    alt={fullName}
    class='w-full h-full mask mask-circle size-44'
  />
</div>
