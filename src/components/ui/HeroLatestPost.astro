---
type Props = {
  title: string
  description: string
  date: string | Date
  href: string
  image: string | ImageMetadata
}

const { title, description, date, href, image } = Astro.props

const imageSrc = typeof image === 'string' ? image : image.src

const formattedDate = new Intl.DateTimeFormat('en-GB', {
  year: 'numeric',
  month: 'long',
  day: '2-digit',
}).format(new Date(date))
---

<div class="hero bg-primary rounded-box shadow-xl">
  <div class="hero-content flex-col gap-8 lg:flex-row lg:items-stretch">
    <!-- Left: image -->
    <div class="w-full lg:w-1/2">
      <img
        src={imageSrc}
        alt={title}
        class="w-full h-full object-cover rounded-box"
        loading="lazy"
      />
    </div>

    <!-- Right: text -->
    <div class="w-full lg:w-1/2">
      <p class="text-sm font-semibold uppercase tracking-wider opacity-70 text-secondary-content">
        Latest post
      </p>

      <h2 class="text-3xl font-black leading-tight mt-1 text-base-100 [text-shadow:0_2px_4px_rgba(0,0,0,0.5)]">
        {title}
      </h2>

      <p class="mt-2 text-sm opacity-70">
        {formattedDate}
      </p>

      <p class="mt-4 text-base opacity-90">
        {description}
      </p>

      <div class="mt-6">
        <a href={href} class="btn btn-secondary">
          Read more
        </a>
      </div>
    </div>
  </div>
</div>
